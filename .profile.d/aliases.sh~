#aliases for better life
alias ls='clear; ls -hogF '
alias ll="clear;ls -1FlhA"
alias rm="rm -i"
alias mv="mv -i"
alias cl="clear"
alias vip='doas su'

alias pkga='doas pkg_add'
alias pkgi='pkg_info'
alias pkgd='doas pkg_delete'
alias df='df -h'
alias du='du -sh'

#programs
alias fm="emacs ."
alias te="emacs"

alias curlf="curl -C - --progress-bar  -O "


#alias for transmission-remote
alias trans="transmission-remote"

#reboot & poweroff
alias reboot="doas reboot"
alias poweroff="doas shutdown -ph now"









